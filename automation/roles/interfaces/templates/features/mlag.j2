
###############
# Mlag and peerlink
###############
{% for interface in mlag.peerlinks %}
auto {{ interface }}
iface {{ interface }}
    alias peerlink

{% endfor %}

auto peerlink
iface peerlink
    bond-slaves {% for interface in mlag.peerlinks %}{{ interface }} {% endfor %}

auto peerlink.4094
iface peerlink.4094
    clagd-peer-ip linklocal
    clagd-priority {{ '16384' if mlag.priority == 'primary' else '32768' }}
    clagd-sys-mac {{ mlag.sysmac }}
    clagd-backup-ip {{ mlag.backup }}

